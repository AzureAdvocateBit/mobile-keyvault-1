{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {        
        "function_name": {
            "defaultValue": "mobiledont",
            "type": "string"
        },
        "keyvault_name": {
            "defaultValue": "MobileDont",
            "type": "string"
        },        
        "storageAcct_name": {
            "defaultValue": "kvmobilestorage",
            "type": "string"
        },
        "appSvcPlan_name": {
            "defaultValue": "mobiledontsvc",
            "type":"string",
            "metadata": {
                "description":"Name of Functions App Service Plan"
            }
        }
    },
    "variables": {
        "overallResourceLocation":"[resourceGroup().location]",
        "tenantId":"[subscription().tenantId]"        
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[parameters('keyvault_name')]",
            "apiVersion": "2018-02-14",
            "location": "[variables('overallResourceLocation')]",                                
            "properties": {
                "tenantId":"[variables('tenantId')]",
                "sku": {
                    "family": "A",
                    "name": "standard"
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_RAGRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "name": "[parameters('storageAcct_name')]",
            "apiVersion": "2018-07-01",
            "location": "[variables('overallResourceLocation')]",                                    
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": false,
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "kind": "functionapp",
            "name": "[parameters('appSvcPlan_name')]",
            "apiVersion": "2016-09-01",
            "location": "[variables('overallResourceLocation')]",
            "scale": null,
            "properties": {
                "name": "[parameters('appSvcPlan_name')]"
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "name": "[parameters('function_name')]",
            "apiVersion": "2016-08-01",
            "location": "[variables('overallResourceLocation')]",            
            "scale": null,
            "properties": {
                "enabled": true,                
                "serverFarmId": "[concat('/subscriptions/', subscription().subscriptionId,'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', parameters('appSvcPlan_name'))]"              
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms/', parameters('appSvcPlan_name'))]"
            ]
        }
    ]
}